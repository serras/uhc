grtag2cmmtag :: (HsName -> CVarInfo) -> GrTag -> Cmm.Tag
grtag2cmmtag lk gt = case gt of
    GrTag_Con _ tg i     -> Cmm.Tag_Con tg i
    GrTag_Hole           -> Cmm.Tag_Ind
    GrTag_Rec            -> Cmm.Tag_Tup
