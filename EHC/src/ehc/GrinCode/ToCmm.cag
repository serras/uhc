gviLoadM'' :: (GrValIntro -> GviLoadM e) -> GrValIntro -> GviLoadM e
gviLoadM'' mk gvi = do
  x <- firstMaybeM gvi [\gvi -> if gviIsInlineable gvi then return $ Just $ gvi else return Nothing, gvi2MbNonInlineM]
  mk x

gviLoadM' :: (GrValIntro -> e) -> GrValIntro -> GviLoadM e
-- gviLoadM' mk gvi = fmap mk $ firstMaybeM gvi [\gvi -> if gviIsInlineable gvi then return $ Just $ gvi else return Nothing, gvi2MbNonInlineM]
gviLoadM' mk gvi = gviLoadM'' (return . mk) gvi

gviLLoadM' :: (GrValIntro -> e) -> [GrValIntro] -> GviLoadM [e]
gviLLoadM' mk = mapM $ gviLoadM' mk
{-# INLINE gviLLoadM' #-}

gviLLoadExprM :: [GrValIntro] -> GviLoadM [Cmm.Expr]
gviLLoadExprM = mapM gvi2InlineableExprM
{-# INLINE gviLLoadExprM #-}

gviLoadExprM :: GrValIntro -> GviLoadM Cmm.Expr
gviLoadExprM = gvi2InlineableExprM
{-# INLINE gviLoadExprM #-}

gvi2InlineableExprM :: GrValIntro -> GviLoadM Cmm.Expr
gvi2InlineableExprM gvi = fmap (fromMaybe $ Cmm.err $ show gvi) $ gvi2MbInlineExprM gvi

-- | To directly inlineable usable expr
gvi2MbInlineExprM :: GrValIntro -> GviLoadM (Maybe Cmm.Expr)
gvi2MbInlineExprM gvi = do
  mbe <- gviFoldInlineableM gvi
  maybe (return $ gvi2MbConstExpr gvi) (return . Just) mbe
  where gviFoldInlineableM = gviFoldInlineable
          ( \n -> do cvi <- nm2CValInfoM n
                     return $ Just $ Cmm.cvar cvi
          , return . Just . Cmm.cvar
          , \i -> return $ Just $ Cmm.Expr_Int (fromIntegral i) Nothing
          , return Nothing
          )

gvi2MbConstExpr :: GrValIntro -> Maybe Cmm.Expr
gvi2MbConstExpr gvi = case gvi of
  GrValIntro_Str _ (Just cref) -> -- return $ Cmm.cvar cref
                                  return $ Cmm.var $ refOfFld cref		-- 20140404 AD: should be cvar construction, but does not fit yet...
  _                            -> Nothing

nm2CValInfoM :: HsName -> GviLoadM Cmm.CVarInfo
nm2CValInfoM nm = do
    env <- asks glrdNmEnv
    cvarmp <- gets glstCVarMp
    case cvarMpLookup nm cvarmp <|> nmEnvLookup nm env of
      Just cv -> do
        modify $ \s -> s {glstUsedCVarS = Set.insert cv $ glstUsedCVarS s}
        return cv
      _       ->
        return (CVar_Error nm)

grtag2cmmtagM :: GrTag -> GviLoadM Cmm.Tag
grtag2cmmtagM gt = case gt of
  GrTag_Con _ tg i     -> return $ Cmm.Tag_Con tg i
  GrTag_Hole           -> return $ Cmm.Tag_Ind
  GrTag_Rec            -> return $ Cmm.Tag_Tup
  GrTag_App      _     -> return $ Cmm.Tag_App
  GrTag_Fun      nm    -> fmap Cmm.Tag_Fun $ nm2CValInfoM nm
  GrTag_PApp m   nm    -> fmap (Cmm.Tag_PApp m) $ nm2CValInfoM nm

gvi2CValInfoM :: GrValIntro -> GviLoadM Cmm.CVarInfo
gvi2CValInfoM gvi = case gvi of
  GrValIntro_Nm nm ->
    nm2CValInfoM nm
  GrValIntro_CVar cvi ->
    return cvi
  gvi -> do
    e <- gviLoadExprM gvi
    gvi' <- cmmBindFreshInM $ \_ cvi -> Cmm.assign cvi e
    gvi2CValInfoM gvi'

gvi2MbNonInlineM :: GrValIntro -> GviLoadM (Maybe GrValIntro)
gvi2MbNonInlineM gvi = case gvi of
  GrValIntro_Grp gt	gviL -> do
    args <- gviLLoadExprM gviL
    dataGam <- asks glrdDataGam
    fmap Just $ cmmBindFreshInM' $ \_ newv  -> do
      t <- grtag2cmmtagM gt
      return $ Cmm.alloc dataGam newv t args
  GrValIntro_Box bx	gvi -> do
    arg <- gviLoadExprM gvi
    fmap Just $ cmmBindFreshInM $ \_ newv  -> Cmm.box newv bx arg
  _ -> return Nothing

cmmBindFreshInM' :: (HsName -> Cmm.CVarInfo -> GviLoadM CmmBodyDecls) -> GviLoadM GrValIntro
cmmBindFreshInM' mk = do
    (nm, cv) <- gviFreshLocalNmM
    ds <- mk nm cv
    gviAppendDeclsM $ Cmm.declLocalRegVar Cmm.tyNd cv Nothing & ds
    return $ GrValIntro_CVar $ cv

cmmBindFreshInM :: (HsName -> Cmm.CVarInfo -> CmmBodyDecls) -> GviLoadM GrValIntro
cmmBindFreshInM mk = cmmBindFreshInM' (\n c -> return $ mk n c)
