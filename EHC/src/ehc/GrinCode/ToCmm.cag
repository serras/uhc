%%[(8 codegen grin cmm) hs
patNmL2CVarMp'' :: (Fld -> Cmm.CVarInfo) -> AssocL HsName Fld -> AssocL HsName Cmm.CVarInfo
patNmL2CVarMp'' mkva nmDepL = [ (n, mkva f) | (n,f) <- nmDepL ]

patNmL2CVarMp' :: (Fld -> Cmm.CVarInfo) -> AssocL HsName Fld -> Cmm.CVarMp
patNmL2CVarMp' mkva nmDepL = Map.fromList $ patNmL2CVarMp'' mkva nmDepL

patNmL2CVarMp :: [HsName] -> Cmm.CVarMp
patNmL2CVarMp = patNmL2CVarMp' (\f -> cvarLoc Cmm.tyNd f) . VA.patNmL2DepL id id
%%]

