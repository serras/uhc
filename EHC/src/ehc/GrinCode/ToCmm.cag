%%[(8 codegen grin cmm) hs
nmEnvLookup :: HsName -> NmEnvCmm -> Maybe Cmm.CVarInfo
nmEnvLookup nm env
  = case cvarMpLookup nm $ neCVarMp env of
      Nothing
%%[[8
        -> Nothing
%%][50
        -> do q <- hsnQualifier nm
              case Map.lookup q $ neImpNmMp env of
                Just (mo,entryMp) -> do
                    eo <- Map.lookup nm entryMp
                    return $ CVar_GlobalExtern Cmm.tyNd (refOfFld mo) (hsnQualified $ refOfFld eo)
                _ -> do
                    return $ CVar_GlobalIntern Cmm.tyNd (Just q) nm
%%]]
      v -> v
%%]

