%%[(50 codegen) hs export(cexprModAsDatabase)
cexprModAsDatabase :: CModule -> CModuleDatabase
cexprModAsDatabase m
  = db_Syn_CodeAGItf t
  where t = wrap_CodeAGItf (sem_CodeAGItf (CodeAGItf_AGItf m)) Inh_CodeAGItf
